generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LotterySubmission {
  id               Int      @id @default(autoincrement())
  uniqueId         String   @unique
  name             String
  email            String?  @unique
  phone            String?  @unique
  accepted_terms   Boolean
  accepted_privacy Boolean
  winner           Int      @default(0)
  prize            String?
  cardNumber       Int?
  createdAt        DateTime @default(now())
}




model SiteSetting {
  id        Int      @id @default(1)
  allowRegistration Boolean @default(true)
}
model Admin {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      Role     @default(MANAGER) // ðŸ†• Add role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  OWNER    // Main admin
  MANAGER  // Child admin
}
model exportLogs {
  id          Int      @id @default(autoincrement())
  ipAddress   String
  userAgent   String
  exportedAt  DateTime @default(now())
}

